    {{#each posts as |post|}}
    
          <div class="container lg-12">
            <div class="card">
                <div class="card-header bg-dark">
                    {{!-- <h5><a href="{{post_url}}" target="_blank">{{title}}</a></h5> --}}
                    <a href="/post/{{id}}"<h5>{{title}}</h5></a>
                    
                    <h5>Posted by {{username}} on {{format_date created_at}}</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">{{article}}</p>
                </div>
            </div>
        </div>
  
    {{/each}}
 