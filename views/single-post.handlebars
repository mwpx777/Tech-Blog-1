<article class="post">
    <div class="title">
        <a href="{{post.post_url}}" target="_blank">{{post.title}}</a>
        <span>({{post.post_url}}</span>
    </div>
    <div class="meta">
        <a href="/post/{{post.id}}">{{post.comments.length}} comments</a>
         </div>
</article>

<form class="comment-form">
    <div>
        <textarea name="comment-body" placeholder="Comment here!"></textarea>
    </div>
        <button class="btn btn-secondary"  type="submit" >submit</button>
</form>

<div class="comments">
    {{#each post.comments}};
    <section class="comment">
        <div class="meta">
            {{user.username}} on {{created_at}}
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>